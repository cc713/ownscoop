    "shortcuts": [
        [
            "ATGUI.exe",
            "AnyTXT"
        ]
    ],
    "persist": "config.db",
    "checkver": {
        "url": "https://sourceforge.net/projects/anytxt/files/",
        "regex": "Version ([\\d.]+)"
    },
    "autoupdate": {
        "url": "https://sourceforge.net/projects/anytxt/files/AnyTXT.Searcher.$version.exe"
    }
}
