{
    "version": "1.2.540",
    "description": "A local document search application",
    "homepage": "https://anytxt.net/",
    "license": "GPL-3.0-or-later",
    "url": "https://sourceforge.net/projects/anytxt/files/AnyTXT.Searcher.1.2.540.exe",
